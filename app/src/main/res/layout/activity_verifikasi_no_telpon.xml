<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerifikasiNoTelponActivity">
    <LinearLayout
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/sms"
            android:layout_width="200dp"
            android:layout_height="200dp"/>

        <com.google.android.material.textfield.TextInputEditText
            android:background="@drawable/bg_et_login"
            android:drawableLeft="@drawable/ic_baseline_code_24"
            android:id="@+id/etVerifikasi"
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:inputType="number"/>

        <Button
            android:layout_margin="10dp"
            android:background="@drawable/bg_bt_login"
            android:id="@+id/btVerifikasi"
            android:textColor="@color/putih"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Verifikasi" />
        <LinearLayout
            android:layout_margin="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="Kirim Ulang ?"
                android:textColor="@color/colorPrimary"
                android:id="@+id/tvKirimUlang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="00:00"
                android:textColor="@color/colorPrimary"
                android:id="@+id/tvTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>